<BaseLayout title="Hero Block 2">
  <div class="hero-block">
    <img
      class="hero__image"
      src="/images/squashed/hero@2x.jpg"
      alt="founders of Studio Henk"
      width="933"
      height="607"
    />
    <img
      class="hero__swirl"
      src="/images/swirl.svg"
      alt="swirl"
      width="197"
      height="51"
    />
    <div class="hero__content">
      <div></div>
      <div class="col2">
        <h1 class="h4">About Us</h1>
        <h2 class="h3">
          We are a conscious Dutch design brand that makes beautiful and
          functional furniture to last a lifetime.
        </h2>
      </div>
    </div>
  </div>
